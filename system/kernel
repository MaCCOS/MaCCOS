local _build = 4
local args = { ... }

local _running = true

System = {
	
}

Screen = {
	Cursor = {

	},
	Color = {

	},
	Drawing = {

	}
}

Directory = {
	
}

String = {
	
}

function kmain( ... )
	print("Loading MaCCOS kernel [build " .. _build .. "]")
	
	dofile("/system/system.lua")
	
	state = start()
	if state == 0 then
		while _running do
			loop()
		end
	else
		printError("Error code: " .. state)
	end
	stop()
end
local ok, err = pcall(function() kmain(unpack(args)) end)
if not ok then
	print("\nSomething went wrong :(")
	print(err)
end