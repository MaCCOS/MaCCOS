--[[ MaCCOS App Store ]]--
build = 26
args = { ... }


if #args < 2 then
	print("Usage: mar <option> [application]")
else
	load_module("Mar")
	load_module("Json")

	option = args[1]
	app_name = args[2]

	-- i -> install
	if option == "-i" then
		print("Downloading app: " .. app_name)
		Mar.DownloadApp(app_name)
		print("App successfully installed")

	-- r -> remove
	elseif option == "-r" then
		Mar.RemoveApp(app_name)
	-- u -> update
	elseif option == "-u" then
		Mar.UpdateApp(app_name)
	else
		print("Avaliable options: -i -r")
	end


	unload_module("Mar")
	unload_module("Json")
end