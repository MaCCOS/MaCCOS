--[[ MaCCOS App Store ]]--
build = 24
args = { ... }


if #args < 2 then
	print("Usage: mar <option> [application]")
else
	option = args[1]
	app_name = args[2]

	-- i -> install
	if option == "-i" then
		print("Downloading app: " .. app_name)
		Mar.DownloadApp(app_name)
		print("App successfully installed")

	-- r -> remove
	elseif option == "-r" then
		Mar.RemoveApp(app_name)
	-- u -> update
	elseif option == "-u" then

	else
		print("Avaliable options: -i -r")
	end
end