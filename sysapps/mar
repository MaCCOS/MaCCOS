--[[ MaCCOS App Store ]]--
build = 32
args = { ... }
flags = {}


if #args < 2 then
	System.println("Usage: mar <option> [application]")
else
	load_module("Mar")
	load_module("Json")

	option = args[1]
    app_name = args[2]
    
    for i = 2, #args do
        flags[args[i]] = true
    end

	-- i -> install
	if option == "-i" then
		
		Mar.DownloadApp(app_name, flags)
		

	-- r -> remove
	elseif option == "-r" then
		Mar.RemoveApp(app_name, flags)
	-- u -> update
	elseif option == "-u" then
		Mar.UpdateApp(app_name, flags)
	else
		System.println("Avaliable options: -i -r")
	end


	unload_module("Mar")
	unload_module("Json")
end