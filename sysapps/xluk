local function DrawGUI()
    maxx = Screen.getSizeX()
    maxy = Screen.getSizeY()
    Screen.Drawing.drawLine(1, 1, maxx, 1, colors.blue)
    Screen.Drawing.drawLine(maxx, 1, maxx, maxy, colors.blue)
    Screen.Drawing.drawLine(maxx, maxy, 1, maxy, colors.blue)
    Screen.Drawing.drawLine(1, maxy, 1, 1, colors.blue)
    
    Screen.Drawing.drawPixel(maxx, 1, colors.red, colors.white, 'X')
end

function xstart()
    Screen.clear()
    Screen.Cursor.setPos(1, 1)
    
end

function xloop()
    DrawGUI()
    sleep(1)
end

function xstop()

end

